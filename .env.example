# API Authentication Service - Environment Variables
# Copy this file to .env and update with your values

# ============================================
# API CREDENTIALS (Required)
# ============================================
API_CUENTA=CD2D
API_LLAVE=ifr-pruebas-F7EC2E
API_CODIGO_SERVICIO=cd85e
API_PAIS=CR

# ============================================
# API CONFIGURATION
# ============================================
API_BASE_URL=https://api.ejemplo.com
API_TIMEOUT=30

# ============================================
# APPLICATION SETTINGS
# ============================================
API_ENV=production          # Options: production, development, testing
LOG_LEVEL=INFO             # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
DEBUG=false
TZ=America/Costa_Rica

# ============================================
# FILE SETTINGS
# ============================================
UPLOAD_DIR=/app/uploads
TEMP_DIR=/app/temp
LOG_DIR=/app/logs
DATA_DIR=/app/data

# File restrictions
MAX_FILE_SIZE=10485760     # 10MB in bytes
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf,gif
MAX_FILES_PER_REQUEST=10

# ============================================
# SECURITY
# ============================================
ENABLE_SSL_VERIFY=true
REQUEST_RETRY_COUNT=3
REQUEST_RETRY_DELAY=1

# ============================================
# PERFORMANCE
# ============================================
BATCH_SIZE=5
PARALLEL_UPLOADS=false
CONNECTION_POOL_SIZE=10

# ============================================
# DEVELOPMENT SETTINGS (Optional)
# ============================================
# DEV_SERVER_HOST=0.0.0.0
# DEV_SERVER_PORT=8000
# RELOAD_ON_CHANGE=true

# ============================================
# TESTING SETTINGS (Optional)
# ============================================
# TEST_API_URL=https://httpbin.org/post
# TEST_MODE=false
# MOCK_RESPONSES=false

# ============================================
# MONITORING (Optional)
# ============================================
# ENABLE_METRICS=false
# METRICS_PORT=9090
# HEALTH_CHECK_INTERVAL=30

# ============================================
# PROXY SETTINGS (Optional)
# ============================================
# HTTP_PROXY=
# HTTPS_PROXY=
# NO_PROXY=localhost,127.0.0.1
